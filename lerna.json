{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "types": [
      {
        "type": "feat",
        "section": "✨ Features"
      },
      {
        "type": "fix",
        "section": "🐛 Bug Fixes"
      },
      {
        "type": "chore",
        "section": "🚀 Chore"
      },
      {
        "type": "docs",
        "section": "📝 Documentation"
      },
      {
        "type": "style",
        "section": "💄 Styles"
      },
      {
        "type": "refactor",
        "section": "♻️ Code Refactoring"
      },
      {
        "type": "perf",
        "section": "⚡ Performance Improvements"
      },
      {
        "type": "test",
        "section": "✅ Tests"
      },
      {
        "type": "revert",
        "section": "⏪ Revert"
      },
      {
        "type": "build",
        "section": "📦‍ Build System"
      },
      {
        "type": "ci",
        "section": "👷 Continuous Integration"
      }
    ],
    "issuePrefixes": [
      "#"
    ]
  }
}
